@using RezoFrontend.Service
@inject TitleService TitleService
@implements IDisposable

<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="">
            @(string.IsNullOrEmpty(TitleService.Title) ? "Le Rezo!" : TitleService.Title)
        </a>
    </div>
</div>

<input type="checkbox" title="Navigation menu" class="navbar-toggler"/>

<div class="nav-scrollable" onclick="document.querySelector('.navbar-toggler').click()">
    <nav class="nav flex-column">
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="bi bi-house-door-fill-nav-menu" aria-hidden="true"></span> Home
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="about">
                <span class="bi bi-info-fill-nav-menu" aria-hidden="true"></span> About
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="calendar">
                <span class="bi bi-calendar-fill-nav-menu" aria-hidden="true"></span> Les Permanences
            </NavLink>
        </div>
    </nav>
</div>

@code {

    protected override void OnInitialized()
    {
        TitleService.OnChange += StateHasChanged;
    }

    public void Dispose()
    {
        TitleService.OnChange -= StateHasChanged;
    }

}